        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        android:background="#f00"/>
   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/list">
   </ListView>

</LinearLayout>